<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".views.fragments.DetailFragment">

    <data>
        <variable
                name="dogs"
                type="com.example.dogspediakotlin.models.DogBreeds" />
        <variable
                name="palette"
                type="com.example.dogspediakotlin.models.DogPalette" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{palette.color}">
        <ImageView
                android:id="@+id/imgDetailAnimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imageUrl="@{dogs.imageUrl}"
                android:layout_alignParentTop="true"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:minHeight="200dp"
                android:contentDescription="@string/dog_picture" />

        <TextView
                android:id="@+id/tvNameOfDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@{dogs.dogBreed}"
                android:layout_below="@id/imgDetailAnimal"
                android:layout_centerHorizontal="true"
                style="@style/Text"
                />
        <TextView
                android:id="@+id/tvDogPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@{dogs.bredFor}"
                android:layout_below="@id/tvNameOfDog"
                android:layout_centerHorizontal="true"
                style="@style/Text"
                />
        <TextView
                android:id="@+id/tvDogTemperament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@{dogs.temperament}"
                android:layout_below="@id/tvDogPurpose"
                android:layout_centerHorizontal="true"
                style="@style/Text"
                />

        <TextView
                android:id="@+id/tvDogLifespan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@{dogs.lifeSpan}"
                android:layout_below="@id/tvDogTemperament"
                android:layout_centerHorizontal="true"
                style="@style/Text"
                />


    </RelativeLayout>
</layout>
